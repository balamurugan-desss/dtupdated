@model IEnumerable<TransCanada.Models.allcontact>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>All Contacts</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <style>
        table{
  margin: 0 auto;
  width: 100%;
  clear: both;
  
  table-layout: fixed;
  word-wrap:break-word; 
}
    </style>
</head>
<body>
    <h4>All Contacts</h4>
    
    <table id="tbl" class="table table-striped table-bordered dt-responsive nowrap" width="80%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.location)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.fname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.lname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.offphone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                        
                    </td>
                    <td>
                        <a href="@item.mainurl">@item.Name</a>
                    </td>
                    <td>
                        <a href="@item.lurl">@item.location</a>
                    </td>
                    <td>
                        <a href="@item.curl">@item.fname</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.lname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.offphone)
                    </td>
                    <td>
                        
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

    <script>

            $('#tbl').dataTable({
                "responsive": true
            });

    </script>
</body>
</html>
